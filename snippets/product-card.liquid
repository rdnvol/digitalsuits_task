<div id="shopify-{{ blockId }}" class="product-item">
  <div class="image__wrapper">
    <div class="price__per__day">
      {% if product.metafields.custom.frequency_price != blank and product.metafields.custom.frequency != blank %}
        <div class="price__per__day--price">
          {{ product.metafields.custom.frequency_price.value | money }}
        </div>
        <div class="price__per__day--day">{{ product.metafields.custom.frequency }}</div>
      {% endif %}
    </div>
    <a class="image__wrapper__inner" href="{{ product.url }}">
      {% if product.featured_image != blank %}
        <img
          src="{{ product.featured_image |  image_url }}"
          alt="{{ product.featured_image.alt }}"
          loading="lazy"
          width="270"
          height="217"
        >
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </a>
    <div class="tags__list">
      {% for tag in product.metafields.custom.tags.value limit: 2 %}
        <div class="tag__item">
          <div class="tag__item__inner">
            <img
              class="tag__icon"
              src="{{ tag.icon.value | image_url }}"
              alt="tag.icon.alt"
              width="18"
              height="18"
              loading="lazy"
            >
            <div class="tag__text">{{ tag.name.value }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="product-item__box">
    <h3 class="product-item--title">{{ product.title }}</h3>
    <div class="product-item--price">{{ product.price | money }}</div>
  </div>
</div>
