{% assign variable = false %}
{{ 'https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css' | stylesheet_tag }}
{{ 'splide_products_slider.js' | asset_url | script_tag }}
{{ 'fonts.css' | asset_url | stylesheet_tag }}
{{ 'normalase.css' | asset_url | stylesheet_tag }}
{{ 'products_slider.scss' | asset_url | stylesheet_tag }}

<section id="shopify-{{ section.id }}" class="section section-padding--large products-slider">
  <div class="container">
    {% if section.settings.title != blank or section.settings.section_content != blank %}
      <div class="section__content">
        {% if section.settings.title != blank %}
          <h1 class="section__title">{{ section.settings.title }}</h1>
        {% endif %}
        {% if section.settings.section_content != blank %}
          <div class="content__text">
            <p class="content__text__inner">{{ section.settings.section_content }}</p>
          </div>
        {% endif %}
      </div>
    {% endif %}
    {% if section.blocks.size >= 1 %}
      <div class="splide slideshow-gallery">
        <div class="splide__track">
          <div class="splide__list">
            {% for block in section.blocks limit: 4 %}
              <div {{ block.shopify_attributes }} class="splide__slide slide">
                {% if block.settings.product_picker != blank %}
                  {% render 'product-card', product: block.settings.product_picker, blockId: block.id %}
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    {% endif %}
    {% if section.settings.btn_url != blank and section.settings.btn_text != blank %}
      <div class="main-btn">
        <a class="main-btn__inner" href="{{ section.settings.btn_url }}"> {{ section.settings.btn_text }} </a>
      </div>
    {% endif %}
  </div>
</section>

<script defer src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>

{% style %}
  {% if section.settings.title_color != blank and section.settings.title_color.alpha != 0 %}
    #shopify-{{ section.id }} .section__title {
      --color-title_color: {{ section.settings.title_color }};
    }
  {% endif %}

  {% if section.settings.content_color != blank and section.settings.content_color.alpha != 0 %}
    #shopify-{{ section.id }} .content__text {
      --color-content_text_color: {{ section.settings.content_color }};
    }
  {% endif %}

  {% if section.settings.btn_text_color != blank and section.settings.btn_text_color.alpha != 0 %}
    #shopify-{{ section.id }} .main-btn__inner {
      --color-main_btn_text: {{ section.settings.btn_text_color }};
    }
  {% endif %}

  {% if section.settings.btn_color != blank and section.settings.btn_color.alpha != 0 %}
    #shopify-{{ section.id }} .main-btn__inner, .splide__pagination__page--custom.is-active {
      --color-main_btn: {{ section.settings.btn_color }};
    }
  {% endif %}

  {% for block in section.blocks %}
    {% if block.settings.product_bg_color != blank and block.settings.product_bg_color.alpha != 0 %}
      #shopify-{{ block.id }} .image__wrapper {
        --color-image__wrapper: {{ block.settings.product_bg_color }};
      }
    {% endif %}
  {% endfor %}
{% endstyle %}

{% schema %}
{
  "name": "Products slider",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Have you had your daily dose of vit today?"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color"
    },
    {
      "type": "text",
      "id": "section_content",
      "label": "Content text",
      "default": "Whether you need a daily pick-me up or a little sleep support, our products are developed with the end goal in mind. Optimally-dosed, highly bioavailable formulas means you can see and feel results that set you on a path to better health."
    },
    {
      "type": "color",
      "id": "content_color",
      "label": "Content color"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button text",
      "default": "See all products"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button URL",
      "default": "/collections"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button text color"
    },
    {
      "type": "color",
      "id": "btn_color",
      "label": "Button color"
    }
  ],
  "blocks": [
    {
      "name": "Product picker",
      "type": "product",
      "settings": [
        {
          "type": "product",
          "id": "product_picker",
          "label": "Pick a product"
        },
        {
          "type": "color",
          "id": "product_bg_color",
          "label": "Product backgroung after element hover",
          "default": "#FFF9C0"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Products slider",
      "settings": {},
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}
